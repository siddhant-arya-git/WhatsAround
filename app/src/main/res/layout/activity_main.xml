<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEAEA"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="326dp"
        android:layout_height="627dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="8">

        <ImageButton
            android:id="@+id/restaurantButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_marginBottom="0sp"
            android:background="@drawable/custom_button_rounded"
            android:backgroundTint="#EFE3E3"
            android:elevation="@dimen/default_gap"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="buttonClick"
            android:tag="restaurant"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/restimg" />

        <ImageButton
            android:id="@+id/parkingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_marginBottom="0sp"
            android:background="@drawable/custom_button_rounded"
            android:backgroundTint="#EFE3E3"
            android:elevation="@dimen/default_gap"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="buttonClick"
            android:tag="parking"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/parkimg" />

        <ImageButton
            android:id="@+id/tourismButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_marginBottom="0sp"
            android:background="@drawable/custom_button_rounded"
            android:backgroundTint="#EFE3E3"
            android:elevation="@dimen/default_gap"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="buttonClick"
            android:tag="tourist_attraction"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/tourismimg" />

        <ImageButton
            android:id="@+id/petrolButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_marginBottom="0sp"
            android:background="@drawable/custom_button_rounded"
            android:backgroundTint="#EFE3E3"
            android:elevation="@dimen/default_gap"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="buttonClick"
            android:tag="gas_station"
            app:layout_column="1"
            app:layout_columnWeight="1"

            app:layout_row="2"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/petrolimg" />

        <ImageButton
            android:id="@+id/mallsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_marginBottom="0sp"
            android:background="@drawable/custom_button_rounded"
            android:backgroundTint="#EFE3E3"
            android:elevation="@dimen/default_gap"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="buttonClick"
            android:tag="shopping_center"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="4"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/mallimg" />

        <ImageButton
            android:id="@+id/cinemaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_marginBottom="0sp"
            android:background="@drawable/custom_button_rounded"
            android:backgroundTint="#EFE3E3"
            android:elevation="@dimen/default_gap"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="buttonClick"
            android:tag="cinema"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="4"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/cinemaimg" />

        <ImageButton
            android:id="@+id/emergencyButton"
            android:layout_width="wrap_content"
            android:layout_height="124dp"
            android:layout_margin="10sp"
            android:layout_marginBottom="0sp"
            android:background="@drawable/custom_button_rounded"
            android:backgroundTint="#EFE3E3"
            android:elevation="@dimen/default_gap"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="buttonClick"
            android:tag="emergency"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="6"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/emergencyimg" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurants"
            android:textAlignment="center"
            app:layout_column="0"
            app:layout_gravity="fill_horizontal"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parkings"
            android:textAlignment="center"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tourism Places"
            android:textAlignment="center"
            app:layout_column="0"
            app:layout_gravity="fill_horizontal"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gas Stations"
            android:textAlignment="center"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoping Malls"
            android:textAlignment="center"
            app:layout_column="0"
            app:layout_gravity="fill_horizontal"
            app:layout_row="5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cinema Halls"
            android:textAlignment="center"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Services/ Medical Services"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_gravity="fill_horizontal"
            app:layout_row="7" />


    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>